import random

# Power Function

def cool_math():
    x = input("Enter a number: ")
    x = int(x)
    y = input("What power do you want to multiply your int to: ")
    y = int(y)
    print(x ** y)



n = random.randint(1,15)
print("I am thinking of a number")


runnin = True

while runnin:
    guess_str = input("Take a guess ")
    guess = int(guess_str)
    if guess == n:
        print("Well Done")
        runnin = False
    elif guess < n:
        print("Try a bigger number")
    else:
        print("Try a smaller number")


def Maths():
    print("Enter X into function: ")
    numberx = int(input());
    numbery = (2*(numberx+10))/((numberx)**2+2(numberx)-30)
    print("Y value: " + numbery)
