import random

# Power Function

def cool_math():
    x = input("Enter a number: ")
    x = int(x)
    y = input("What power do you want to multiply your int to: ")
    y = int(y)
    print(x ** y)



n = random.randint(1,15)
print("I am thinking of a number")


runnin = True

while runnin:
    guess_str = input("Take a guess ")
    guess = int(guess_str)
    if guess == n:
        print("Well Done")
        runnin = False
    elif guess < n:
        print("Try a bigger number")
    else:
        print("Try a smaller number")

loop = 1
while 1 == 1:
    if 1 == loop:
        loop = 0
        print("What operation would you like to calculate?")
        print("( + - * / )")
        x = input()
        if "+" == x:
            print("What is the first number?")
            x = input()
            print("What is the second number?")
            y = input()
            x = int(x)
            y = int(y)
            print(x + y)
            loop = 1
        elif "-" == x:
            print("What is the number to subtract from?")
            x = input()
            print("What is the number to subtract?")
            y = input()
            x = int(x)
            y = int(y)
            print(x - y)
            loop = 1
        elif "*" == x:
            print("What is the first number?")
            x = input()
            print("What is the second number?")
            y = input()
            x = int(x)
            y = int(y)
            print(x * y)
            loop = 1
        elif "/" == x:
            print("What is the number to divide from?")
            x = input()
            print("What is the number to divide by?")
            y = input()
            x = int(x)
            y = int(y)
            print(x / y)
            loop = 1
