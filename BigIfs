# Fibonacci Sequence
def big_ifs():
    x = input("Enter a number: ")
    x = int(x)
    if x > 1:
        for i in range(2, x):
            if (x % i) == 0:
                print(x, "is not a prime number.")
                break
        else:
            print(x, "is a prime number.")
    else:
        print(x, "is not a prime number.")

import time

## Username is USER and the password is password, the password will change to whatever you set it when prompted to.
pswd = "password"
while 1 == 1:
    print("USERNAME")
    inpt = input()
    if inpt == "USER":
        print("PASSWORD")
        inpt = input()
        if inpt == pswd:
            x = 1
            while x < 50:
                x = str(x)
                print(x + "%")
                x = int(x)
                x = x + 1
                time.sleep(.1)
            while x < 101:
                x = str(x)
                print(x + "%")
                x = int(x)
                x = x + 1
                time.sleep(.005)
            print("Sign in successful")
            if pswd == "password":
                print("You have a terrible password")
            else:
                print("You still have a terrible password")
            print("please enter a new password")
            pswd = input()
        else:
            print("WRONG PASSWORD")
    else:
        print("ERROR")
